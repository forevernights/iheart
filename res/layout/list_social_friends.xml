<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_social_friends_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_border_square"
            android:scaleType="centerCrop"
            android:src="@drawable/image_4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_social_friends_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taeyeon" />

            <TextView
                android:id="@+id/list_social_friends_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="taeyeon@naver.com" />

            <TextView
                android:id="@+id/list_social_friends_mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678" />

            <TextView
                android:id="@+id/list_social_friends_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/list_social_friends_unfriend_button"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
				android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/navigation_button"
                android:text="Unfriend"
                android:textSize="12sp" >
            </Button>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>