<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_social_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_border_square"
            android:scaleType="centerCrop"
            android:src="@drawable/image_4" />

        <TextView
            android:id="@+id/list_social_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Taeyeon has invited you to go for donation" />
    </LinearLayout>

    <!-- social message -->

    <LinearLayout
        android:id="@+id/list_social_container_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0e0e0"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="70dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Location:" >
                </TextView>

                <TextView
                    android:id="@+id/list_social_notification_textview_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSA" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Date: " >
                </TextView>

                <TextView
                    android:id="@+id/list_social_notification_textview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/12/2012" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Time: " >
                </TextView>

                <TextView
                    android:id="@+id/list_social_notification_textview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:13:13" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:paddingLeft="70dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message" />

            <TextView
                android:id="@+id/list_social_notification_textview_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Hey! Let&apos;s go together" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingLeft="70dp" >

            <Button
                android:id="@+id/list_social_button_accept"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/navigation_button"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Accept" />

            <Button
                android:id="@+id/list_social_button_reject"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/navigation_button"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Reject" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>