<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EFormActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have you been overseas within the last 3 months? Search your location to find yout if you can donate." />

        <AutoCompleteTextView
            android:id="@+id/eform_search_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/eform_search"
            android:hint="Enter location" />
        
        <TextView
            android:id="@+id/eform_message"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_border_square"
            android:drawableLeft="@drawable/supply_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The area is safe! Please proceed to fill in the e-form." />
    </LinearLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/eform_button_fill_eform"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Fill in E-Form"
        android:textSize="12sp" >
    </Button>

</LinearLayout>