<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp" >

    <TextView
        android:id="@+id/friend_request_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kim Taeeyeon"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/friend_request_dialog_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: taeyeon@naver.com" />

    <TextView
        android:id="@+id/friend_request_dialog_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No: 2312321123" />

    <TextView
        android:id="@+id/friend_request_dialog_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: Female" />

    <TextView
        android:id="@+id/friend_request_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message: Hey, let&apos;s be friend!" />

</LinearLayout>